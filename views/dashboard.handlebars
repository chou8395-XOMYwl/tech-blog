<section>
  <h2>Create Post</h2>
  <form class="new-post-form">
  <div class="form-group">
    <label for="post-title">Title</label>
    <input type="text" id="post-title" name="post-title">
  </div>
  <div class="form-group">
    <label for="post-content">Content</label>
    <input id="post-content" name="post-content"/>
  </div>
  <button type="create-post" class="btn">Create</button>
</form>
</section> 

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul class="list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>

{{else}}
    <h5 class="">No Posts</h5>
{{/if}}

<script src="/javascript/add-post.js"></script>