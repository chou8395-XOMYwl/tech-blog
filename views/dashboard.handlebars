  <form class="new-post-form">
  <div class="form-group">
    <label for="post-title">Title</label>
    <input type="text" name="post-title" id="post-title" placeholder="Enter title">
    <small class="form-text text-muted">Think wisely about your title.</small>
  </div>
  <div class="form-group">
    <label for="post-content">Content</label>
    <input id="post-content" name="post-content"/>
  </div>
  <button type="submit" class="btn">Create</button>
</form>
</section> <br>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ul class="list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

